<Window x:Class="NevolEditor.LoadingProgram.LoadingForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NevolEditor.LoadingProgram"
        BorderThickness="0"
        AllowsTransparency="True"
        mc:Ignorable="d"
        WindowStyle="None"
        fw:AcrylicWindow.Enabled="True"
        fw:AcrylicWindow.AcrylicWindowStyle="None"
        fw:AcrylicWindow.FallbackColor="#33333333"
        fw:AcrylicWindow.TintOpacity="0.1"
        fw:AcrylicWindow.TintColor="Black"
        x:Name="nevolEdit"
        WindowStartupLocation="CenterScreen"
        Title="NevolEdit" Height="450" Width="800">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Image Source="LoadingPicture.jpg" Stretch="UniformToFill"/>
        <TextBlock Text="{DynamicResource LoadingText}" Foreground="White" Grid.Row="1"></TextBlock>
    </Grid>
</Window>
